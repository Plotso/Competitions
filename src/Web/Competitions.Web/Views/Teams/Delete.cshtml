@model Competitions.Web.ViewModels.Team.TeamModifyInputModel
@{
    ViewData["Title"] = "Изтриване на отбор";
    ViewData["Keywords"] = "Състезание, Турнир, Създаване, Лига, Отбор";
    ViewData["Description"] = "Изтриване на отбор";
}

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        relative_urls: false,
        remove_script_host : false,
        convert_urls : true,
        plugins: [
            "image paste table link code media fullscreen wordcount searchreplace lists"
        ]
    });
</script>

<div>
    <form asp-action="Create" id="comment-form" class="form justify-content-center">
        <div>
            <label asp-for="Team.Name">Име на отбор</label>
            <input asp-for="Team.Name" class="form-control" readonly/>
            <span asp-validation-for="Team.Name" class="text-danger"></span>
        </div>

        <div class="center-group">
            <input type="submit" name="onSubmitAction" class="btn btn-light" value="Откажи"/>
            <input type="submit" name="onSubmitAction" class="btn btn-primary delete-record-btn" value="Потвърди" onclick="return confirm(`Сигурни ли сте, че желаете да изтриете даденият отбор?`)"/>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}