@model Competitions.Web.ViewModels.Competition.CompetitionModifyInputModel

@{
    ViewData["Title"] = "Изтриване на състезания, турнири и лиги";
    ViewData["Keywords"] = "Състезания, Всички състезания, Турнири, Всички турнири, Лиги, Всички Лиги, Спорт";
    ViewData["Description"] = "Изтриване на турнири, лиги и други спортни състезания";
}

<div>
    <form asp-action="Delete" id="comment-form" class="form justify-content-center">
        <div>
            <label asp-for="Competition.Title">Име на състезание</label>
            <input asp-for="Competition.Title" class="form-control" readonly/>
            <span asp-validation-for="Competition.Title" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Competition.Rules">Правила</label>
            <input asp-for="Competition.Rules" class="form-control" aria-describedby="rulesBlock" readonly/>
            <span asp-validation-for="Competition.Rules" class="text-danger"></span>
            <small id="rulesBlock" class="form-text text-muted">
                Общи правила при провеждането на състезанието. Не е задължително да се въвеждат такива, но е препоръчително.
            </small>
        </div>
        <div>
            <label asp-for="Competition.Location">Локация</label>
            <input asp-for="Competition.Location" class="form-control" aria-describedby="locationBlock" readonly/>
            <span asp-validation-for="Competition.Location" class="text-danger"></span>
            <small id="locationBlock" class="form-text text-muted">
                Локацията, където ще се провежда състезанието. Може да е град или по-специфичен обект.
            </small>
        </div>
        <div>
            <label asp-for="Competition.Information">Информация</label>
            <input asp-for="Competition.Information" class="form-control" aria-describedby="infoBlock" readonly/>
            <span asp-validation-for="Competition.Information" class="text-danger"></span>
            <small id="infoBlock" class="form-text text-muted">
                Допълнителна информация, която организаторът сметне за нужна. При недостатъчно информация за локацията в съответното поле се препоръчва да се добавят повече детайли в допълнителната информация.
            </small>
        </div>
        <div>
            <label asp-for="Competition.SportId"></label>
            <select asp-for="Competition.SportId" 
                            class="form-control" 
                            asp-items="Model.Sports" readonly>
                        <option>Спорт: </option>
                    </select>
            <span asp-validation-for="Competition.SportId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Competition.MaxNumberOfParticipants">Максимален брой участници</label>
            <input asp-for="Competition.MaxNumberOfParticipants" class="form-control" readonly/>
            <span asp-validation-for="Competition.MaxNumberOfParticipants" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Competition.IsTeamCompetition">Отборно състезание</label>
            <input asp-for="Competition.IsTeamCompetition" class="form-control" readonly/>
            <span asp-validation-for="Competition.IsTeamCompetition" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Competition.Type"></label>
            <select asp-for="Competition.TypeId" 
                            class="form-control" 
                            asp-items="Model.TypesBG" readonly>
                        <option>Тип състезание: </option>
                    </select>
            <span asp-validation-for="Competition.TypeId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Competition.EntryFee">Входна такса</label>
            <input asp-for="Competition.EntryFee" class="form-control" aria-describedby="entryFeeBlock" readonly/>
            <span asp-validation-for="Competition.EntryFee" class="text-danger"></span>
            <small id="entryFeeBlock" class="form-text text-muted">
                Ако има такава, в противен случай, полето се оставя празно.
            </small>
        </div>
        <div>
            <label asp-for="Competition.WinningPrize">Награден фонд</label>
            <input asp-for="Competition.WinningPrize" class="form-control" aria-describedby="winningPrizeBlock" readonly/>
            <span asp-validation-for="Competition.WinningPrize" class="text-danger"></span>
            <small id="winningPrizeBlock" class="form-text text-muted">
                Ако има такъв, в противен случай, полето се оставя празно.
            </small>
        </div>
        <div>
            <label asp-for="Competition.WinPoints">Точки за победа</label>
            <input asp-for="Competition.WinPoints" class="form-control" aria-describedby="winBlock" readonly/>
            <span asp-validation-for="Competition.WinPoints" class="text-danger"></span>
            <small id="winBlock" class="form-text text-muted">
                Броят точки, които даден отбор или играч взима при победа. Ако не важи за конкретното събитие, полето се оставя празно.
            </small>
        </div>
        <div>
            <label asp-for="Competition.DrawPoints">Точки за равенство</label>
            <input asp-for="Competition.DrawPoints" class="form-control" aria-describedby="drawBlock" readonly/>
            <span asp-validation-for="Competition.DrawPoints" class="text-danger"></span>
            <small id="drawBlock" class="form-text text-muted">
                Броят точки, които даден отбор или играч взима при равен резултат. Ако не важи за конкретното събитие, полето се оставя празно.
            </small>
        </div>
        <div>
            <label asp-for="Competition.CloseLosePoints">Точки за близка загуба</label>
            <input asp-for="Competition.CloseLosePoints" class="form-control" aria-describedby="closeLoseBlock" readonly/>
            <span asp-validation-for="Competition.CloseLosePoints" class="text-danger"></span>
            <small id="closeLoseBlock" class="form-text text-muted">
                Броят точки, които даден отбор или играч взима при загуба с близък резултат. Такива има например във волейбола. Ако не важи за конкретното събитие, полето се оставя празно.
            </small>
        </div>
        <div>
            <label asp-for="Competition.Starting">Начало на състезанието</label>
            <input asp-for="Competition.Starting" class="form-control" readonly/>
            <span asp-validation-for="Competition.Starting" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Competition.Ending">Край на състезанието</label>
            <input asp-for="Competition.Ending" class="form-control" aria-describedby="endingBlock" readonly/>
            <span asp-validation-for="Competition.Ending" class="text-danger"></span>
            <small id="endingBlock" class="form-text text-muted">
                Трябва да бъде след началото на състезанието!
            </small>
        </div>
        
        <div class="center-group">
            <input type="submit" name="onSubmitAction" class="btn btn-light" value="Откажи"/>
            <input type="submit" name="onSubmitAction" class="btn btn-primary delete-record-btn" value="Потвърди" onclick="return confirm(`Сигурни ли сте, че желаете да изтриете даденото състезание?`)"/>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}